# ==================== Base Identity ====================
[user]
    name = tinywaves
    email = dhzhme@gmail.com

# ==================== Core Behavior ====================
[core]
    editor = vim

[init]
    defaultBranch = main

[pull]
    rebase = false

[push]
    default = simple
    autoSetupRemote = true

[fetch]
    prune = true

[commit]
    verbose = true

[clean]
    requireForce = true

# ==================== Merge & Conflict ====================
[merge]
    conflictstyle = zdiff3

[rerere]
    enabled = true

# ==================== Diff Improvements ====================
[diff]
    algorithm = histogram

[color]
    ui = auto

[color "branch"]
    auto = true

[color "diff"]
    auto = true

[color "status"]
    auto = true

# ==================== Blame Quality of Life ====================
[blame]
    ignoreRevsFile = .git-blame-ignore-revs

# ==================== Useful Aliases ====================
[alias]
    lg = log --oneline --graph --decorate --all
